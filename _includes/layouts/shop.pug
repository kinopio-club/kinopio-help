section.shop-intro
  img(src="/assets/house.jpeg")
  div
    p.welcome Welcome
    p Thanks for supporting Kinopio
    // br
    // br
    // span (ｏ・_・)ノ
    //- a description of the store, why it exists, why you should use it
    // Thanks for stopping by. Every purchase supports kinopio

mixin posts(collection)
  - let titles = ''
  each post in collections[collection]
    - titles = titles + ',' + post.data.title

  ul.products
    each post in collections[collection]
      li(data-title=post.data.title)
        a(href=post.url)
          img(src=post.data.image)
          h1 #{post.data.title}
          p #{post.data.description}
          if post.data.isSoldOut
            .badge.inline-badge.danger Sold Out
          else
            .badge.inline-badge.secondary #{post.data.totalMade} Made

section.shop

  - let collection

  - collection = 'Products'
  +posts(collection)
